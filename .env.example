# ========================= CREDENTIALS =========================
# IMPORTANT: Copy this file to .env and fill in your actual credentials
# Never commit the .env file to version control!

# Gmail Configuration
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character password generated
GMAIL_ADDRESS=your_email@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# OpenAI API Configuration
# Get your API Key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# ========================= DATABASE CONFIGURATION =========================

# Excel Database
# Path to your Excel file (can be absolute or relative to project root)
EXCEL_FILE_PATH=HCN1.xlsx
# Sheet name in the Excel file
SHEET_NAME=HotelReport (1)

# ========================= EMAIL SETTINGS =========================

# Send reminder after X hours if no HCN received
REMINDER_AFTER_HOURS=2

# Check emails from last X days
DAYS_TO_CHECK=7

# Delay between sending emails (seconds) - to avoid rate limiting
DELAY_BETWEEN_EMAILS=2

# ========================= COMPANY DETAILS =========================

# Your company name (appears in email signature)
COMPANY_NAME=Within Earth Travel Pvt. Ltd.

# Sender name (appears in email signature)
SENDER_NAME=Reservations Team

# ========================= SECURITY SETTINGS =========================

# JWT Secret Key for authentication
# Generate a secure random string for production
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================= SERVER CONFIGURATION =========================

# Backend API Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration (for development)
FRONTEND_PORT=3000
